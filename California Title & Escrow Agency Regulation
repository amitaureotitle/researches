    <script>
        // --- DATA & STATE ---
        const timelineData = [
            {
                title: "Preparation & Formation",
                duration: "1-3 Months",
                desc: "Before you even speak to the regulator, you must build the shell. This involves incorporating (C-Corp), raising capital, and most critically, finding your Qualified Manager.",
                checklist: [
                    "Incorporate C-Corp (Specific 'Escrow' naming rules apply)",
                    "Deposit Liquid Capital ($25k - $50k)",
                    "Recruit Qualified Manager (Must have 5 yrs exp)"
                ],
                activePct: 80,
                waitingPct: 20
            },
            {
                title: "The Application",
                duration: "Month 4",
                desc: "Submission of the 'Form 10' or equivalent. This is a massive documentation dump including personal histories, financial statements, and lease agreements.",
                checklist: [
                    "Submit Statement of Identity for all owners",
                    "Submit Audited Financials",
                    "Fingerprinting (Live Scan) via DOJ"
                ],
                activePct: 90,
                waitingPct: 10
            },
            {
                title: "The State Vetting",
                duration: "Months 5-12+",
                desc: "The 'Black Hole'. The state reviews background checks and financials. They will send 'Deficiency Letters' asking for clarification. Response speed is key.",
                checklist: [
                    "Respond to Deficiency Letter #1",
                    "Manager Interview by State",
                    "Background Check Clearance"
                ],
                activePct: 10,
                waitingPct: 90
            },
            {
                title: "Pre-Opening Audit",
                duration: "Month 13+",
                desc: "Approval is conditional. You must now prove you are ready to open doors. A state auditor will physically inspect your office.",
                checklist: [
                    "Secure Surety Bond",
                    "Join EAFC (Fidelity Corp)",
                    "Pass Office Inspection"
                ],
                activePct: 60,
                waitingPct: 40
            }
        ];

        const regulatoryData = {
            escrow: {
                authority: "Regulator: DFPI",
                desc: "Department of Financial Protection & Innovation",
                definition: "A neutral third party that holds funds and documents. Licensed under the CA Financial Code Div 6. Cannot issue title insurance policies. Commonly known as 'Independent Escrow'.",
                restrictions: [
                    "Must be a standalone C-Corporation.",
                    "Sole purpose: Escrow business only.",
                    "Must have a qualified manager (5+ years exp).",
                    "Strict audit requirements (CPA)."
                ],
                chartData: [20, 80], // 20 complex, 80 simple (relative)
                chartLabel: "Barrier to Entry: Medium/High"
            },
            title: {
                authority: "Regulator: CDI",
                desc: "California Department of Insurance",
                definition: "Issues title insurance policies AND handles escrow. Regulated under the Insurance Code. Requires significantly higher capitalization and underwriting contracts.",
                restrictions: [
                    "Capital requirements: $500k minimum net worth.",
                    "Must have Title Plant (records) or access to one.",
                    "Must obtain Underwriting Agreement.",
                    "Strict rate filing requirements."
                ],
                chartData: [85, 15],
                chartLabel: "Barrier to Entry: Very High"
            }
        };

        // --- CHART INSTANCES ---
        let marketChartInstance = null;

        // --- FUNCTIONS ---

        function initCharts() {
            const ctx = document.getElementById('marketShareChart').getContext('2d');
            marketChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Complexity/Cost', 'Ease of Entry'],
                    datasets: [{
                        data: [60, 40],
                        backgroundColor: ['#b45309', '#e5e7eb'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: { enabled: false }
                    },
                    cutout: '70%'
                }
            });
        }

        function switchRegulatoryView(type) {
            // Update Buttons
            const btnEscrow = document.getElementById('btn-escrow');
            const btnTitle = document.getElementById('btn-title');
            
            if(type === 'escrow') {
                btnEscrow.className = "px-6 py-2 rounded-md text-sm font-medium transition-all shadow-sm bg-white text-slate-900";
                btnTitle.className = "px-6 py-2 rounded-md text-sm font-medium transition-all text-slate-500 hover:text-slate-900";
            } else {
                btnTitle.className = "px-6 py-2 rounded-md text-sm font-medium transition-all shadow-sm bg-white text-slate-900";
                btnEscrow.className = "px-6 py-2 rounded-md text-sm font-medium transition-all text-slate-500 hover:text-slate-900";
            }

            // Update Text
            const data = regulatoryData[type];
            document.getElementById('reg-authority').innerText = data.authority;
            document.getElementById('reg-desc').innerText = data.desc;
            document.getElementById('reg-definition').innerText = data.definition;
            
            const ul = document.getElementById('reg-restrictions');
            ul.innerHTML = '';
            data.restrictions.forEach(item => {
                const li = document.createElement('li');
                li.innerText = item;
                ul.appendChild(li);
            });

            // Update Chart
            marketChartInstance.data.datasets[0].data = data.chartData;
            marketChartInstance.update();
        }

        function updateTimeline(index) {
            const data = timelineData[index];
            
            // Update Text
            document.getElementById('tl-title').innerText = data.title;
            document.getElementById('tl-duration').innerText = `Duration: ${data.duration}`;
            document.getElementById('tl-desc').innerText = data.desc;
            
            // Update List
            const list = document.getElementById('tl-list');
            list.innerHTML = '';
            data.checklist.forEach(item => {
                const li = document.createElement('li');
                li.className = "flex items-start";
                li.innerHTML = `<span class="mr-2 text-amber-500">‚úì</span> ${item}`;
                list.appendChild(li);
            });

            // Update Bars
            document.getElementById('tl-bar-active').style.width = `${data.activePct}%`;
            document.getElementById('tl-bar-waiting').style.width = `${data.waitingPct}%`;

            // Update Nav Styles
            const dots = document.querySelectorAll('.timeline-dot');
            dots.forEach((dot, i) => {
                const parent = dot.parentElement;
                if (i === index) {
                    parent.classList.add('step-active');
                    dot.classList.remove('bg-white', 'border-slate-300');
                    dot.classList.add('bg-amber-600', 'border-amber-100');
                } else {
                    parent.classList.remove('step-active');
                    dot.classList.add('bg-white', 'border-slate-300');
                    dot.classList.remove('bg-amber-600', 'border-amber-100');
                }
            });
        }

        function calculateBond() {
            const amount = parseInt(document.getElementById('bondInput').value);
            const rate = parseFloat(document.getElementById('creditInput').value);
            
            const premium = amount * rate;
            
            // Format currency
            const formatter = new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                maximumFractionDigits: 0
            });

            document.getElementById('premiumOutput').innerText = formatter.format(premium);
            document.getElementById('faceValueDisplay').innerText = new Intl.NumberFormat('en-US').format(amount);
        }

        // Initialize
        window.addEventListener('load', () => {
            initCharts();
            updateTimeline(0); // Set initial timeline state
            calculateBond();   // Set initial calc state
        });

    </script>
</body>
</html>
