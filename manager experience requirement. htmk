            <div class="flex flex-wrap justify-center gap-4">
                <button onclick="checkQual('officer')" class="px-6 py-3 bg-slate-800 border border-slate-700 rounded-xl hover:bg-amber-600 hover:border-amber-400 transition-all">Escrow Officer (CA)</button>
                <button onclick="checkQual('outstate')" class="px-6 py-3 bg-slate-800 border border-slate-700 rounded-xl hover:bg-amber-600 hover:border-amber-400 transition-all">Escrow Officer (TX/AZ)</button>
                <button onclick="checkQual('attorney')" class="px-6 py-3 bg-slate-800 border border-slate-700 rounded-xl hover:bg-amber-600 hover:border-amber-400 transition-all">Closing Attorney (NY/FL)</button>
                <button onclick="checkQual('assistant')" class="px-6 py-3 bg-slate-800 border border-slate-700 rounded-xl hover:bg-amber-600 hover:border-amber-400 transition-all">Escrow Assistant (5+ yrs)</button>
